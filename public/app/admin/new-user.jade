h2 Create New User

.validation-summary-errors
  span {{validation_summary_errors}}
form.col-md-8(name='newUserForm')
  fieldset
    .form-group
      label.control-label(for='userName') User Name
      input.form-control(name='userName', type='text', placeholder='User Name', ng-model='userName', required)
    .form-group
      label.control-label(for='password') Password
      input.form-control(name='password', type='password', placeholder='Password', ng-model='password', required)
    .form-group
      label.control-label(for='passwordConfirm') Confirm Password
      input.form-control(name='passwordConfirm', type='password', placeholder='Confirm', ng-model='passwordConfirm', required)
    .form-group
      label.control-label(for='email') Email
      input.form-control(name='email', type='email', placeholder='Email', ng-model='email', required)
    .checkbox
      label
        input(name='admin', type='checkbox', ng-model='admin')
        span Administrator
    .form-group
      .pull-right
        button.btn.btn-primary(ng-click="createUser()", ng-disabled="newUserForm.$invalid") Create
        | &nbsp; 
        a.btn.btn-default(href='/admin/users') Cancel
  br

